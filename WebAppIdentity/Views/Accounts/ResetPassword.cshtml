@using WebAppIdentity.Models.ViewModels;
@model ResetPasswordViewModel

<section class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Recuperar contraseña</h4>
            </div>
            <div class="card-body">
                <form asp-action="ResetPassword" asp-controller="Accounts" method="post">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>

                    <input type="hidden" asp-for="Code" />

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="email" asp-for="Email" class="form-control"/>
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PasswordHash" class="form-label"></label>
                        <input type="password" asp-for="PasswordHash" class="form-control" />
                        <span class="text-danger" asp-validation-for="PasswordHash"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPasswordHash" class="form-label"></label>
                        <input type="password" asp-for="ConfirmPasswordHash" class="form-control" />
                        <span class="text-danger" asp-validation-for="ConfirmPasswordHash"></span>
                    </div>

                    <button type="submit" class="btn btn-success">Enviar</button>
                    <a asp-action="Login" asp-controller="Accounts" class="btn btn-dark">Cancelar</a>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-3"></div>
</section>

