@using WebAppIdentity.Models.ViewModels;
@model RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recuperar contraseña";
}

<div class="row mt-5">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <section class="card">
            <div class="card-header">
                <p class="card-title fw-bold">Recuperar contraseña</p>
            </div>
            <div class="card-body">
                <form asp-action="RecoverPassword" asp-controller="Accounts" method="post" role="form">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="Ingresa tu correo electronico" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-success">Enviar email <i class="bi bi-forward-fill"></i></button>
                </form>
            </div>
        </section>
    </div>
    <div class="col-md-3"></div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}